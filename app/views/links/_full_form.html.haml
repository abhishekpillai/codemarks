= form_for @link, :html => {:id => "link_form"} do |form|
  - if @link && @link.errors.present?
    .errors
      - @link.errors.full_messages.each do |msg|
        %p.flash.error= msg
  .inputs
    = form.label :url
    = form.url_field :url
  .inputs
    = form.label :title
    = form.text_field :title
  = render '/layouts/search', :prefix => 'link_form', :placeholder => "Add topic tags..."
  .clear
  = render 'topic_tags_list', :pos_topics => @pos_topics
  .clear
  - if logged_in?
    = render 'link_preference_fields', :form => form
  = form.submit
  .clear
