#authentication
  - if logged_in?
    %ul
      %li.left= link_to 'My Account', user_path(current_user)
      %li.right= link_to 'Log Out', sign_out_path, :method => :delete
  - else
    %ul
      %li.left= link_to 'Sign Up', new_user_path
      %li.right= link_to 'Already a member? Sign In', sign_in_path
